@model PaperAndProse.Models.Book

@{
    ViewData["Title"] = Model.Title;
}

<div class="container my-5 text-white">

    <!--Back Link -->
    <a href="/Home/Shop" class="btn btn-link text-light mb-4">&larr; Back to Shop</a>


    <div class="row">

        <!-- Book Cover -->
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImagePath)" class="img-fluid rounded shadow" alt="@Model.Title" style="max-height: 400px; object-fit: contain;" />
        </div>

        <!-- Book Info -->
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>Condition:</strong> @Model.Condition</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p class="mt-3">@Model.Description</p>

            <a asp-controller="Home" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Add to Cart</a>
        </div>
    </div>
</div>
